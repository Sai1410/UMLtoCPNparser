<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Text?>
<GridPane fx:controller="parser.MainController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <Button text="Choose UML"
            onAction="#handleUMLChoose"
            GridPane.columnIndex="0" GridPane.rowIndex="0"/>

    <Text fx:id="umlPathText" text="Choose UML file"
          GridPane.columnIndex="1" GridPane.rowIndex="0"/>

    <Button text="Choose output folder"
            onAction="#handleOutputChoose"
            GridPane.columnIndex="0" GridPane.rowIndex="1"/>

    <Text fx:id="outputPathText" text="Choose output directory"
          GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label fx:id="resultLabel"
          GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.rowSpan="2"
          GridPane.columnSpan="2" />

    <Button text="Convert UML to CPN Tools"
            onAction="#handleConvert"
            GridPane.columnIndex="0" GridPane.rowIndex="5"/>

</GridPane>